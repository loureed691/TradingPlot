# KuCoin API Credentials
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_passphrase_here

# Set to true for sandbox/testnet, false for production
KUCOIN_SANDBOX=true

# Risk Management
# When ADAPTIVE_RISK_MODE=true (default), the bot automatically calculates
# optimal values for MAX_LEVERAGE, MAX_POSITION_SIZE_PERCENT, STOP_LOSS_PERCENT,
# and TAKE_PROFIT_PERCENT based on market conditions and strategy performance.
# The values below serve as initial defaults until adaptive calculations are available.
ADAPTIVE_RISK_MODE=true
MAX_LEVERAGE=10
MAX_POSITION_SIZE_PERCENT=5.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=4.0

# Trading Configuration
MIN_VOLUME_USD=1000000.0
UPDATE_INTERVAL=60

# Logging
LOG_LEVEL=INFO
